{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/hooks/class-validator/src",
  "projectType": "library",
  "targets": {
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs hooks-class-validator {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "package"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/hooks/class-validator/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/hooks/class-validator"],
      "options": {
        "jestConfig": "libs/hooks/class-validator/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "package": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "libs/hooks/class-validator/package.json",
        "outputPath": "dist/libs/hooks/class-validator",
        "entryFile": "libs/hooks/class-validator/src/index.ts",
        "tsConfig": "libs/hooks/class-validator/tsconfig.lib.json",
        "compiler": "babel",
        "umdName": "Class Validator",
        "external": ["typescript"],
        "format": ["cjs", "esm"],
        "assets": [
          {
            "glob": "LICENSE",
            "input": "./",
            "output": "./"
          },
          {
            "glob": "README.md",
            "input": "./libs/hooks/class-validator",
            "output": "./"
          }
        ]
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx semantic-release --extends ./libs/hooks/class-validator/release.config.js",
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "package"
        }
      ]
    }
  },
  "tags": []
}
